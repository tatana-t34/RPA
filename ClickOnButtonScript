from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.common.exceptions import TimeoutException, NoSuchElementException

YANDEX_PATH = r"C:путь до браузера"
CHROMEDRIVER_PATH = r"C:путь до драйвера"

options = Options()
options.binary_location = YANDEX_PATH

service = Service(CHROMEDRIVER_PATH)
driver = webdriver.Chrome(service=service, options=options)

driver.get("https://www.istu.edu/")
try:
    text_box = WebDriverWait(driver, 10).until(
        EC.presence_of_element_located((By.CLASS_NAME, "first-big-banner"))
    )

    submit_button = text_box.find_element(By.CSS_SELECTOR, "button")
    submit_button.click()
    print("Кнопка найдена")

except (TimeoutException, NoSuchElementException):
    print("Кнопка не найдена")
